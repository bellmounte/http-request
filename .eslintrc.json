{
	"extends": "eslint:recommended",
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "rules": {
        /* Possible Errors */
        "comma-dangle": [2],
        "no-cond-assign": [1, "except-parens"],
        "no-console": 2,
        "no-constant-condition": 2,
        "no-control-regex": 1,
        "no-debugger": 1,
        "no-dupe-args": 1,
        "no-dupe-keys": 1,
        "no-duplicate-case": 2,
        "no-empty-character-class": 1,
        "no-empty": 2,
        "no-ex-assign": 1,
        "no-extra-boolean-cast": 1,
        "no-extra-parens": 2,
        "no-extra-semi": 2,
        "no-func-assign": 1,
        "no-inner-declarations": [1, "functions"],
        "no-invalid-regexp": 1,
        "no-irregular-whitespace": 2,
        "no-negated-in-lhs": 1,
        "no-obj-calls": 1,
        "no-regex-spaces": 1,
        "quote-props": 2,
        "no-sparse-arrays": 1,
        "no-unexpected-multiline": 1,
        "no-unreachable": 2,
        "use-isnan": 1,
        "valid-jsdoc": 1,
        "valid-typeof": 1,

        /* Best Practices */
        "accessor-pairs": 1,
        "block-scoped-var": 1, // see Babel section
        "complexity": 2,
        "consistent-return": 2,
        "curly": [1, "all"],
        "default-case": 1,
        "dot-notation": [2, { "allowKeywords": true, "allowPattern": "" }],
        "dot-location": [1, "property"],
        "eqeqeq": 2,
        "guard-for-in": 1,
        "no-alert": 2,
        "no-caller": 1,
        "no-div-regex": 1,
        "no-else-return": 2,
        "no-labels": 1,
        "no-eq-null": 1,
        "no-eval": 1,
        "no-extend-native": 1,
        "no-extra-bind": 1,
        "no-fallthrough": 1,
        "no-floating-decimal": 1,
        "no-implied-eval": 1,
        "no-iterator": 1,
        "no-labels": 1,
        "no-lone-blocks": 1,
        "no-loop-func": 1,
        "no-multi-spaces": 2,
        "no-multi-str": 1,
        "no-native-reassign": 1,
        "no-new-func": 1,
        "no-new-wrappers": 1,
        "no-new": 1,
        "no-octal-escape": 1,
        "no-octal": 1,
        "no-param-reassign": 2,
        "no-process-env": 1,
        "no-proto": 1,
        "no-redeclare": 1,
        "no-return-assign": 1,
        "no-script-url": 1,
        "no-self-compare": 1,
        "no-sequences": 1,
        "no-throw-literal": 1,
        "no-unused-expressions": 1,
        "no-void": 1,
        "no-warning-comments": [1, { "terms": ["todo", "tofix"], "location": "start" }],
        "no-with": 1,
        "radix": 1,
        "vars-on-top": 1,
        "wrap-iife": [1, "inside"],
        "yoda": [1, "never"],

        /* Strict Mode */
        "strict": [1, "never"],

        /* Variables */
        "no-catch-shadow": 1,
        "no-delete-var": 1,
        "no-label-var": 1,
        "no-shadow-restricted-names": 1,
        "no-shadow": 2,
        "no-undef-init": 1,
        "no-undef": 2,
        "no-undefined": 1,
        "no-unused-vars": [2, { "vars": "local", "args": "after-used" }],
        "no-use-before-define": 1,

        /* Node.js */
        "handle-callback-err": 1,
        "no-mixed-requires": 1,
        "no-new-require": 1,
        "no-path-concat": 1,
        "no-process-exit": 1,
        "no-restricted-modules": [1, ""], // add any unwanted Node.js core modules
        "no-sync": 1,

        /* Stylistic Issues */
        "array-bracket-spacing": [1, "never"],
        "brace-style": [1, "1tbs", { "allowSingleLine": true }],
        "camelcase": [2, { "properties": "always" }],
        "comma-spacing": [1, { "before": false, "after": true }],
        "comma-style": [1, "last"],
        "computed-property-spacing": 1,
        "consistent-this": 1,
        "eol-last": 1,
        "func-names": 2,
        "func-style": [1, "declaration", {"allowArrowFunctions": true}],
        "indent": [2, "tab"],
        "key-spacing": [2, { "beforeColon": false, "afterColon": true }],
        "linebreak-style": 1,
        "max-nested-callbacks": [0, 3],
        "new-cap": 1, // see Babel section
        "new-parens": 1,
        "newline-after-var": 2,
        "no-array-constructor": 1,
        "no-continue": 1,
        "no-inline-comments": 1,
        "no-lonely-if": 1,
        "no-mixed-spaces-and-tabs": 2,
        "no-multiple-empty-lines": [2, { "max": 1 }],
        "no-nested-ternary": 1,
        "no-new-object": 1,
        "no-spaced-func": 2,
        "no-ternary": 0,
        "no-trailing-spaces": 2,
        "no-underscore-dangle": 2,
        "no-unneeded-ternary": 1,
        "object-curly-spacing": 1, // see Babel section
        "one-var": [1, "never"],
        "operator-assignment": [0, "never"],
        "padded-blocks": [2, "never"],
        "quote-props": [2, "as-needed"],
        "quotes": [2, "single"],
        "semi-spacing": [1, { "before": false, "after": true }],
        "semi": [2, "always"],
        "sort-vars": 1,
        "keyword-spacing": 1,
        "space-before-blocks": [1, "always"],
        "space-before-function-paren": [2, "always"],
        "space-in-parens": [2, "never"],
        "space-infix-ops": 1,
        "keyword-spacing": 1,
        "space-unary-ops": 1,
        "spaced-comment": [1, "always"],
        "wrap-regex": 1,

        /* ECMAScript 6 */
        "constructor-super": 1,
        "generator-star-spacing": 1,
        "no-this-before-super": 1,
        "no-var": 2,
        "object-shorthand": 2,
        "prefer-const": 2,

        /* Legacy */
        "max-depth": [1, 3],
        "max-len": [1, 121, 4, {"ignoreComments": true, "ignoreUrls": true}],
        "max-params": 1,
        "max-statements": [1, 15],
        "no-bitwise": 1,
        "no-plusplus": [1, {"allowForLoopAfterthoughts": true }]
    }
}
